@model PagedResult<ProductViewModel>
@using BanHangThoiTrangMVC.HelperModels.Paging
@{
    ViewBag.Title = "Danh Sách Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang Chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/products" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản Lý Sản Phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/home">Home</a></li>
                    <li class="breadcrumb-item active">@ViewBag.Title</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/products/add" class="btn btn-primary">Thêm Mới</a>
                <a href="#" class="btn btn-danger" id="BtnDeleteAll">Xóa All</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="card-tools">
                    @using (Html.BeginForm("Index", "Products", FormMethod.Get, new { }))
                    {
                        <div class="input-group input-group-sm">
                            @Html.TextBox("Searchtext", null, new { @class = "form-control" })
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-info btn-flat">Tìm Kiếm</button>
                            </span>
                        </div>
                    }
                </div>
            </div>
            <table class="table table-hover">
                <thead>
                    <th><input type="checkbox" id="SelectAll" /></th>
                    <th>STT</th>
                    <th>
                    
                        Hình Ảnh
                    </th>
                    <th>
                        <a href="@Url.Action("Index", new { page = ViewBag.Page, sortColumn = "Title", isDesc = !ViewBag.IsDesc })">
                            Tên Sản Phẩm
                            @if (ViewBag.Column == "Title")
                            {
                                <i class="@(ViewBag.IsDesc != null && ViewBag.IsDesc ? "fa fa-arrow-down" : "fa fa-arrow-up")"></i>
                            }
                            else
                            {
                                <i class="@("fa fa-sort")"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a href="@Url.Action("Index", new { page = ViewBag.Page, sortColumn = "ProductCategory.Title", isDesc = !ViewBag.IsDesc })">
                            Danh Mục
                            @if (ViewBag.Column == "ProductCategory.Title")
                            {
                                <i class="@(ViewBag.IsDesc != null && ViewBag.IsDesc ? "fa fa-arrow-down" : "fa fa-arrow-up")"></i>
                            }
                            else
                            {
                                <i class="@("fa fa-sort")"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a href="@Url.Action("Index", new { page = ViewBag.Page, sortColumn = "Quantity", isDesc = !ViewBag.IsDesc })">
                            Số Lượng
                            @if (ViewBag.Column == "Quantity")
                            {
                                <i class="@(ViewBag.IsDesc != null && ViewBag.IsDesc ? "fa fa-arrow-down" : "fa fa-arrow-up")"></i>
                            }
                            else
                            {
                                <i class="@("fa fa-sort")"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a href="@Url.Action("Index", new { page = ViewBag.Page, sortColumn = "Price", isDesc = !ViewBag.IsDesc })">
                            Giá
                            @if (ViewBag.Column == "Price")
                            {
                                <i class="@(ViewBag.IsDesc != null && ViewBag.IsDesc ? "fa fa-arrow-down" : "fa fa-arrow-up")"></i>
                            }
                            else
                            {
                                <i class="@("fa fa-sort")"></i>
                            }
                        </a>
                    </th>
                    <th>
                        <a href="@Url.Action("Index", new { page = ViewBag.Page, sortColumn = "CreateDate", isDesc = !ViewBag.IsDesc })">
                            Ngày Tạo
                            @if (ViewBag.Column == "CreateDate")
                            {
                                <i class="@(ViewBag.IsDesc != null && ViewBag.IsDesc ? "fa fa-arrow-down" : "fa fa-arrow-up")"></i>
                            }
                            else
                            {
                                <i class="@("fa fa-sort")"></i>
                            }
                        </a>
                    </th>
                    <th>Home</th>
                    <th>Sale</th>
                    <th>Hiển Thị</th>
                </thead>
                <tbody>
                    @if (Model != null && Model.Items.Any())
                    {
                        var i = (ViewBag.Page * ViewBag.PageSize) + 1;
                        foreach (var item in Model.Items)
                        {
                            var strCheck = item.IsActive ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strCheckHome = item.IsHome ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            var strCheckSale = item.IsSale ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>";
                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td>@i</td>
                                <td><img class="imgproduct" data-id="@item.Id" src="@item.ProductImages.FirstOrDefault(x=>x.IsDefault).Image" width="50" /></td>
                                <td>@item.Title</td>
                                <td>@item.ProductCategory.Title</td>
                                <td><a style="margin:25px;">@item.Quantity</a></td>
                                <td>@BanHangThoiTrangMVC.Common.Common.FormatNumber(item.Price, 0)</td>
                                <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <a href='#' data-id="@item.Id" class="btnHome" style="margin:20px;">@Html.Raw(strCheckHome)</a>
                                </td>
                                <td>
                                    <a href='#' data-id="@item.Id" class="btnSale" style="margin:20px;">@Html.Raw(strCheckSale)</a>
                                </td>
                                <td>
                                    <a href='#' data-id="@item.Id" class="btnActive" style="margin:20px;">@Html.Raw(strCheck)</a>
                                </td>
                                <td>
                                    <a href="/admin/products/edit/@item.Id" class="btn btn-sm btn btn-primary">Sửa</a>
                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete">Xóa</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8">Không Có Bản Ghi Nào</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center">

                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("Index", new { page = Model.Page > 0 ? Model.Page - 1 : 0, sortColumn = "Title", isDesc = ViewBag.IsDesc })">
                                Previous
                            </a>
                        </li>
                        @for (int i = 1; i < Math.Ceiling((double)Model.Total / Model.Limit); i++)
                        {
                            <li class="@(Model.Page == i ? "selected" : "")">
                                <a href="@Url.Action("Index", new { page = i, sortColumn = "Title", isDesc = ViewBag.IsDesc })">@(i)</a>
                            </li>
                        }
                        <li class="page-item">
                            <a href="@Url.Action("Index", new { page = Model.Page < Math.Ceiling((double)Model.Total / Model.Limit) ? Model.Page + 1 : Math.Ceiling((double)Model.Total / Model.Limit), sortColumn = "Title", isDesc = ViewBag.IsDesc })">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
<div id="dialog">
    <iframe id="myIframe" style="border: 0; width: 100%; height: 100%;"></iframe>
</div>
@section scripts{
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            //hiển thị form upload ảnh
            $("#dialog").dialog({
                autoOpen: false,
                show: "fade",
                hide: "fade",
                modal: true,
                height: '600',
                width: '700',
                resizable: true,
                title: 'Quản lý ảnh sản phẩm',
                close: function () {
                    window.location.reload();
                }
            });
            $('body').on("click", ".imgproduct", function () {
                var proid = $(this).attr("data-id");
                $("#dialog #myIframe").attr("src", "/admin/ProductImage/Index?id=" + proid);
                $('#dialog').dialog('open');
                return false;
            });


            $('body').on('click', '#BtnDeleteAll', function (e) {
                e.preventDefault();
                var str = "";
                var checkbox = $(this).parents('.card').find('tr td input:checkbox');
                var i = 0;
                checkbox.each(function () {
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                        var _id = $(this).val();
                        if (i == 0) {
                            str += _id;
                        } else {
                            str += "," + _id;
                        }
                        i++;
                    } else {
                        checkbox.attr('selected', '');
                    }
                });
                if (str.length > 0) {
                    var conf = confirm('Bạn có muốn xóa các bản ghi này hay không?');
                    if (conf === true) {
                        $.ajax({
                            url: '/admin/products/deleteAll',
                            type: 'POST',
                            data: { ids: str },
                            success: function (rs) {
                                if (rs.success) {
                                    location.reload();
                                }
                            }
                        });
                    }
                }
            });

            $('body').on('change', '#SelectAll', function () {
                var checkStatus = this.checked;
                var checkbox = $(this).parents('.card-body').find('tr td input:checkbox');
                checkbox.each(function () {
                    this.checked = checkStatus;
                    if (this.checked) {
                        checkbox.attr('selected', 'checked');
                    } else {
                        checkbox.attr('selected', '');
                    }
                });
            });
            $('body').on('click', '.btnDelete', function () {
                var id = $(this).data("id");
                var conf = confirm('Bạn Có Muốn Xóa Bản Ghi Này ?');
                if (conf == true) {
                    $.ajax({
                        url: '/admin/Products/delete',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                $('#trow_' + id).remove();
                            }
                        }
                    });
                }
            });

            $('body').on('click', '.btnActive', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = btn.data("id");
                var conf = confirm('Bạn Có Muốn Chỉnh Sửa Trạng Thái Này ?');
                if (conf == true) {
                    $.ajax({
                        url: '/admin/products/IsActive',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                if (rs.IsActive) {
                                    btn.html("<i class='fa fa-check text-success'></i>");
                                }
                                else {
                                    btn.html("<i class='fas fa-times text-danger'></i>");
                                }
                            }

                        }
                    });
                }

            });

            $('body').on('click', '.btnHome', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = btn.data("id");
                var conf = confirm('Bạn Có Muốn Chỉnh Sửa Trạng Thái Này ?');
                if (conf == true) {
                    $.ajax({
                        url: '/admin/products/IsHome',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                if (rs.IsHome) {
                                    btn.html("<i class='fa fa-check text-success'></i>");
                                }
                                else {
                                    btn.html("<i class='fas fa-times text-danger'></i>");
                                }
                            }

                        }
                    });
                }

            });

            $('body').on('click', '.btnSale', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = btn.data("id");
                var conf = confirm('Bạn Có Muốn Chỉnh Sửa Trạng Thái Này ?');
                if (conf == true) {
                    $.ajax({
                        url: '/admin/products/IsSale',
                        type: 'POST',
                        data: { id: id },
                        success: function (rs) {
                            if (rs.success) {
                                if (rs.IsSale) {
                                    btn.html("<i class='fa fa-check text-success'></i>");
                                }
                                else {
                                    btn.html("<i class='fas fa-times text-danger'></i>");
                                }
                            }

                        }
                    });
                }

            });
        });
    </script>
}

